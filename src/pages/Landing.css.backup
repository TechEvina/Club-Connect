/* Landing.css - Pastel Modern Design */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.landing-navbar {
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  color: var(--text-primary);
  padding: 1rem 0;
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 1000;
  border-bottom: 1px solid var(--border-light);
  box-shadow: var(--shadow-sm);
}

.landing-navbar .container {
  max-width: 1280px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 32px;
}

.landing-navbar .logo {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text-primary);
  background: linear-gradient(135deg, var(--vibrant-green), var(--soft-blue));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.landing-navbar nav ul {
  list-style: none;
  display: flex;
  gap: 1.5rem;
  align-items: center;
  margin: 0;
  padding: 0;
}

.landing-navbar nav ul li {
  display: flex;
  align-items: center;
}

.landing-navbar nav a {
  color: var(--text-secondary);
  text-decoration: none;
  font-weight: 500;
  font-size: 0.9375rem;
  transition: color 0.2s;
}

.landing-navbar nav a:hover {
  color: var(--soft-blue);
}

.landing-navbar .btn {
  background-color: var(--vibrant-green);
  color: var(--text-white);
  border: none;
  padding: 8px 20px;
  border-radius: var(--radius-md);
  font-size: 0.9375rem;
  font-weight: 600;
  transition: all 0.2s;
  box-shadow: var(--shadow-button);
}

.landing-navbar .btn:hover {
  background-color: var(--green-hover);
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(126, 217, 87, 0.35);
}

.hero {
  background: linear-gradient(135deg, #FFF8F0 0%, #FEFDFB 50%, #F9F9F9 100%);
  color: var(--text-primary);
  padding: 140px 32px 96px;
  text-align: left;
  min-height: 100vh;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}

/* Floating shapes background */
.hero::before {
  content: '';
  position: absolute;
  width: 300px;
  height: 300px;
  background: radial-gradient(circle, rgba(126, 217, 87, 0.15), transparent);
  border-radius: 50%;
  top: 10%;
  left: 5%;
  animation: float 8s ease-in-out infinite;
}

.hero::after {
  content: '';
  position: absolute;
  width: 250px;
  height: 250px;
  background: radial-gradient(circle, rgba(110, 181, 255, 0.15), transparent);
  border-radius: 50%;
  bottom: 15%;
  right: 10%;
  animation: float 10s ease-in-out infinite reverse;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-30px); }
}

.hero .container {
  max-width: 1280px;
  margin: 0 auto;
  width: 100%;
  position: relative;
  z-index: 1;
}

.hero-content {
  max-width: 600px;
}

.hero h1 {
  font-size: 4rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
  line-height: 1.1;
  color: var(--text-primary);
}

.hero p {
  font-size: 1.25rem;
  margin-bottom: 2rem;
  color: #7d8590;
  line-height: 1.5;
}

.hero-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}

.hero-visual {
  margin-top: 3rem;
  font-size: 6rem;
  width: 100%;
  height: 600px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-visual canvas {
  width: 100% !important;
  height: 100% !important;
  max-width: 100%;
}

.btn {
  display: inline-block;
  padding: 14px 32px;
  border-radius: 6px;
  font-size: 1rem;
  font-weight: 500;
  text-decoration: none;
  transition: all 0.2s;
  cursor: pointer;
  border: none;
}

.btn.primary {
  background: linear-gradient(180deg, #1f6feb 0%, #1a5cd7 100%);
  color: white;
  box-shadow: 0 0 transparent, 0 0 transparent, 0 0 transparent, 0 0 transparent, 0 1px 1px rgba(0,0,0,.075), 0 2px 4px rgba(0,0,0,.075), 0 4px 8px rgba(0,0,0,.075), 0 8px 16px rgba(0,0,0,.075), 0 16px 32px rgba(0,0,0,.075);
}

.btn.primary:hover {
  background: linear-gradient(180deg, #1f6feb 0%, #164bc5 100%);
  transform: translateY(-1px);
  box-shadow: 0 0 transparent, 0 0 transparent, 0 0 transparent, 0 0 transparent, 0 2px 4px rgba(0,0,0,.1), 0 4px 8px rgba(0,0,0,.1), 0 8px 16px rgba(0,0,0,.1), 0 16px 32px rgba(0,0,0,.1);
}

.btn.outline {
  background: transparent;
  color: #e6edf3;
  border: 1px solid #30363d;
}

.btn.outline:hover {
  background: #30363d;
  border-color: #8b949e;
}

.btn.large {
  padding: 16px 40px;
  font-size: 1.125rem;
}

.section {
  padding: 96px 32px;
  background-color: #0d1117;
  color: #e6edf3;
}

.section .container {
  max-width: 1280px;
  margin: 0 auto;
}

.section h2 {
  font-size: 2.5rem;
  font-weight: 500;
  margin-bottom: 1rem;
  text-align: center;
  color: #e6edf3;
}

.section > .container > p {
  font-size: 1.125rem;
  color: #7d8590;
  text-align: center;
  max-width: 800px;
  margin: 0 auto 3rem;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  margin-top: 3rem;
}

.feature-card {
  background: #161b22;
  border: 1px solid #30363d;
  border-radius: 12px;
  padding: 2rem;
  transition: all 0.2s;
}

.feature-card:hover {
  border-color: #58a6ff;
  transform: translateY(-2px);
}

.feature-card h3 {
  font-size: 1.25rem;
  font-weight: 500;
  margin-bottom: 0.75rem;
  color: #e6edf3;
}

.feature-card p {
  font-size: 0.9375rem;
  color: #7d8590;
  line-height: 1.6;
  margin-bottom: 1rem;
}

.feature-link {
  color: #58a6ff;
  text-decoration: none;
  font-weight: 500;
  font-size: 0.9375rem;
}

.feature-link:hover {
  text-decoration: underline;
}

.testimonials {
  background: #161b22;
}

.testimonials-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin: 3rem 0;
}

.testimonial-card {
  background: #0d1117;
  border: 1px solid #30363d;
  border-radius: 12px;
  padding: 2rem;
}

.testimonial-card p {
  color: #e6edf3;
  margin-bottom: 1rem;
  line-height: 1.6;
}

.testimonial-card p:last-child {
  color: #7d8590;
  font-size: 0.875rem;
  margin-bottom: 0;
}

.testimonial-card strong {
  color: #e6edf3;
}

.stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 2rem;
  margin-top: 3rem;
  padding-top: 3rem;
  border-top: 1px solid #30363d;
}

.stat {
  text-align: center;
}

.stat h3 {
  font-size: 3rem;
  font-weight: 600;
  color: #58a6ff;
  margin-bottom: 0.5rem;
}

.stat p {
  color: #7d8590;
  font-size: 0.9375rem;
}

.faq {
  background: #0d1117;
}

.faq-accordion {
  max-width: 800px;
  margin: 3rem auto 0;
}

.faq-item {
  border-bottom: 1px solid #30363d;
}

.faq-question {
  width: 100%;
  padding: 1.5rem 0;
  background: none;
  border: none;
  color: #e6edf3;
  font-size: 1.125rem;
  font-weight: 500;
  text-align: left;
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: color 0.2s;
}

.faq-question:hover {
  color: #58a6ff;
}

.faq-question.active {
  color: #58a6ff;
}

.faq-icon {
  font-size: 1.5rem;
  font-weight: 300;
  color: #58a6ff;
  transition: transform 0.3s ease;
}

.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease, padding 0.3s ease;
}

.faq-answer.open {
  max-height: 500px;
  padding-bottom: 1.5rem;
}

.faq-answer p {
  color: #7d8590;
  line-height: 1.6;
  margin: 0;
}

.cta {
  background: linear-gradient(180deg, #161b22 0%, #0d1117 100%);
  text-align: center;
  padding: 96px 32px;
}

.cta h2 {
  font-size: 2.5rem;
  margin-bottom: 1rem;
}

.cta p {
  font-size: 1.125rem;
  color: #7d8590;
  max-width: 600px;
  margin: 0 auto 2rem;
}

.cta .btn.large {
  padding: 18px 40px;
  font-size: 1.125rem;
}

.footer {
  background: #0d1117;
  border-top: 1px solid #30363d;
  padding: 3rem 32px;
  color: #7d8590;
}

.footer .container {
  max-width: 1280px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 2rem;
}

.footer nav ul {
  list-style: none;
  display: flex;
  gap: 2rem;
  margin: 0;
  padding: 0;
}

.footer nav a {
  color: #7d8590;
  text-decoration: none;
  font-size: 0.875rem;
}

.footer nav a:hover {
  color: #58a6ff;
}

.footer p {
  font-size: 0.875rem;
  color: #7d8590;
}

@media (max-width: 768px) {
  .hero h1 {
    font-size: 2.5rem;
  }
  
  .hero p {
    font-size: 1rem;
  }
  
  .section h2 {
    font-size: 2rem;
  }
  
  .features-grid,
  .testimonials-grid,
  .faq-grid {
    grid-template-columns: 1fr;
  }
  
  .landing-navbar .container {
    padding: 0 16px;
  }
}